@model IEnumerable<EmployeesEntity>
<br />
<h2>Employees</h2>
<p class="text-end">
    <a asp-action="AddEmployee" asp-controller="Employees" class="btn btn-primary">Add a New Employee</a>
</p>
<hr />
<br />

<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id )
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JobPosition)
        </th>
        <th></th>
    </tr>

    @foreach(var item in Model)
    {
        @Html.HiddenFor(Model => item.Id)
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JobPosition)
            </td>
            <td class="text-center">
                <a asp-action="EditEmployee" asp-route-Id="@item.Id" class="btn btn-primary btn-sm">
                    <i class="bi bi-pencil"></i> Edit
                </a>
                |
                <a asp-action="DeleteEmployee" asp-route-Id="@item.Id" class="btn btn-danger btn-sm">
                    <i class="bi bi-trash"></i> Delete
                </a>
            </td>
        </tr>
    }


</table>

<br />

